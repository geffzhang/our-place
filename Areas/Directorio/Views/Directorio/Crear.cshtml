@model ADESCOMBUSINESS.Areas.Directorio.Models.DIR_Directorio
@{
    ViewBag.Title = "Crear";
    Layout = null;
}
@using (Ajax.BeginForm("Crear", "Directorio", new AjaxOptions { OnBegin = "AdicionarLoading()", UpdateTargetId = "Modal" }, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary(true)
    <div style="width: 100%;">
        @if (ViewBag.Error != "" && ViewBag.Error != null && ViewBag.Error != "OK")
        {
            <div class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                @ViewBag.Error
            </div>
        }
        else
        {
            if (ViewBag.Error == "OK")
            {
                <div class="alert alert-success" role="alert">
                    <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>
                    Operacion Completada Con exito!
                </div>
                <script>
                    OcultarModal();
                    MostarModalSuccess();
                </script>
            }
        }
        <fieldset>
            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.TipoDirectorio_ID, new { @class = "control-label" })
                </div>
                <div class="col-md-4">
                    @Html.DropDownList("TipoDirectorio_ID", null, new { @class = "form-control ", @id = "TipoDirectorio_ID" })
                    @Html.ValidationMessageFor(model => model.TipoDirectorio_ID)
                </div>
                <div class="col-md-2">
                    @Html.LabelFor(model => model.DIR_Descripcion, new { @class = "control-label" })
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.DIR_Descripcion, new { @class = "form-control ", @id = "DIR_Descripcion" })
                    @Html.ValidationMessageFor(model => model.DIR_Descripcion)
                </div>
            </div> <br />
            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.DIR_Contacto, new { @class = "control-label" })
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.DIR_Contacto, new { @class = "form-control ", @id = "DIR_Contacto" })
                    @Html.ValidationMessageFor(model => model.DIR_Contacto)
                </div>
                <div class="col-md-2">
                    @Html.LabelFor(model => model.DIR_Telefono, new { @class = "control-label" })
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.DIR_Telefono, new { @class = "form-control ", @id = "DIR_Telefono" })
                    @Html.ValidationMessageFor(model => model.DIR_Telefono)
                </div>
            </div> <br />
            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.DIR_Celular, new { @class = "control-label" })
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.DIR_Celular, new { @class = "form-control ", @id = "DIR_Celular" })
                    @Html.ValidationMessageFor(model => model.DIR_Celular)
                </div>
                <div class="col-md-2">
                    @Html.LabelFor(model => model.DIR_URL_Email, new { @class = "control-label" })
                </div>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.DIR_URL_Email, new { @class = "form-control ", @id = "DIR_URL_Email" })
                    @Html.ValidationMessageFor(model => model.DIR_URL_Email)
                </div>
            </div> <br />
            <div class="row">
                <div class="col-md-2">
                    @Html.LabelFor(model => model.BS_Activo, new { @class = "control-label" })
                </div>
                <div class="col-md-4">
                    @Html.CheckBoxFor(model => model.BS_Activo, new { @class = "form-control ", @id = "BS_Activo" })
                </div>
            </div> <br />
        </fieldset>
        <br />
        <div class="modal-footer">
            <button type="button" class="btn btn-danger glyphicon glyphicon-remove" data-dismiss="modal"></button>
            <button type="submit" class="btn btn-success glyphicon glyphicon-ok"></button>
        </div>
    </div>
}