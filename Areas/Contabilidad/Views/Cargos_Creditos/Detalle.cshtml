                        @Html.ValidationMessageFor(model => model.MovContable.MCO_Mensaje)
                    </div>
                    <div class="col-md-1"></div>
                </div> <br />
                <div class="row">
                    <div class="col-md-2">
                        @Html.LabelFor(model => model.MovContable.MCO_Monto, new { @class = "control-label" })
                    </div>
                    <div class="col-md-3">
