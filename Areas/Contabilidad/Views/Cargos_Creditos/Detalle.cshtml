                    <div class="col-md-2">
                        @Html.LabelFor(model => model.Cuenta.CTA_Banco, new { @class = "control-label" })
                    </div>
                    <div class="col-md-3">
                        @Html.TextBoxFor(model => model.Cuenta.CTA_Banco, new { @class = "form-control ", id = "CTA_Banco" })
                        @Html.ValidationMessageFor(model => model.Cuenta.CTA_Banco)
                    </div>
                    <div class="col-md-1"></div>
                </div> <br />
                <div class="row">
                    <div class="col-md-2">
                        @Html.LabelFor(model => model.Cuenta.CTA_NumCuenta, new { @class = "control-label" })
                    </div>
                    <div class="col-md-3">
                        @Html.TextBoxFor(model => model.Cuenta.CTA_NumCuenta, new { @class = "form-control ", id = "CTA_NumCuenta" })
                        @Html.ValidationMessageFor(model => model.Cuenta.CTA_NumCuenta)
                    </div>
                    <div class="col-md-1"></div>
                    <div class="col-md-2">
                        @Html.LabelFor(model => model.Cuenta.CTA_Saldo, new { @class = "control-label" })
                    </div>
                    <div class="col-md-3">
                        @Html.TextBoxFor(model => model.Cuenta.CTA_Saldo, new { @class = "form-control ", id = "CTA_Saldo" })
                        @Html.ValidationMessageFor(model => model.Cuenta.CTA_Saldo)
                    </div>
                    <div class="col-md-1"></div>
                </div> <br />
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <label class="control-label">Movimientos Ligados</label>
                </div>
                <table id="Statuses" class="table table-advance table-hover table-bordered  ">
                    <thead style="background-color: #2e2e37; color: white">
                    <th>Fecha</th>
                    <th>Cuenta</th>
                    <th>Usuario</th>
                    <th>Concepto</th>
                    <th>Observaciones</th>
                    <th>Monto</th>
                    </thead>
                    <tbody class="row form-panel">
                        @foreach (ADESCOMBUSINESS.Areas.Contabilidad.Models.VwCON_MovContables OBJVwCON_MovContables in ViewBag.MovLigados)
                        {
                            <tr onclick="SelectRow(@OBJVwCON_MovContables.MovContable_ID , this)">
                                <td>@Html.DisplayFor(m => OBJVwCON_MovContables.MCO_Fecha)</td>
                                <td>@Html.DisplayFor(m => OBJVwCON_MovContables.CTA_Alias)</td>
                                <td>@Html.DisplayFor(m => OBJVwCON_MovContables.UsuarioCreo)</td>
                                <td>@Html.DisplayFor(m => OBJVwCON_MovContables.CCO_Descripcion)</td>
                                <td>@Html.DisplayFor(m => OBJVwCON_MovContables.MCO_Mensaje)</td>
                                <td>@Html.DisplayFor(m => OBJVwCON_MovContables.MCO_Monto)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
</fieldset>
    </fieldset>
    <div class="modal-footer">
        @ADESCOM.Helpers.AjaxExtensions.GetHml(Ajax.ActionLink("<span class='glyphicon glyphicon-trash'/>Cancelar Movimiento", "CancelarMovimiento", "Cargos_Creditos", new { MovContable_ID = @Model.MovContable.MovContable_ID }, new AjaxOptions { HttpMethod = "get", OnBegin = "MostarVistaParcial2('Cancelar Movimeinto')", OnFailure = "MostrarErrorModal2", UpdateTargetId = "Modal2" }, new { @class = "btn btn-TSI btn-sm", @title = "Cancelar Movimeinto" }).ToString())
        <button type="button" class="btn btn-TSI btn-sm" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span>Salir</button>
    </div>
</div>


