                        @Html.ValidationMessageFor(model => model.MovContable.MCO_Referencia)
                    </div>
                    <div class="col-md-1"></div>
                </div> <br />
                <div class="row">
                    <div class="col-md-2">
                        @Html.LabelFor(model => model.MovContable.UsuarioCreo, new { @class = "control-label" })
                    </div>
                    <div class="col-md-3">
                        @Html.TextBoxFor(model => model.MovContable.UsuarioCreo, new { @class = "form-control ", id = "UsuarioCreo" })
                        @Html.ValidationMessageFor(model => model.MovContable.UsuarioCreo)
