                        @Html.ValidationMessageFor(model => model.MovContable.MCO_Monto)
                    </div>
                    <div class="col-md-1"></div>
                    <div class="col-md-2">
                        @Html.LabelFor(model => model.MovContable.MCO_MontoIVA, new { @class = "control-label" })
                    </div>
                    <div class="col-md-3">
                        @Html.TextBoxFor(model => model.MovContable.MCO_MontoIVA, new { @class = "form-control ", id = "MCO_MontoIVA" })
                        @Html.ValidationMessageFor(model => model.MovContable.MCO_MontoIVA)
                    </div>
                    <div class="col-md-1"></div>
