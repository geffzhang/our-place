                        @Html.ValidationMessageFor(model => model.MovContable.CCO_TipoMovimiento)
                    </div>
                    <div class="col-md-1"></div>
                </div> <br />
                <div class="row">
                    <div class="col-md-2">
                        @Html.LabelFor(model => model.MovContable.BS_Activo, new { @class = "control-label" })
                    </div>
                    <div class="col-md-3">
                        @Html.CheckBoxFor(model => model.MovContable.BS_Activo, new { @class = "form-control ", id = "BS_Activo" })
                        @Html.ValidationMessageFor(model => model.MovContable.BS_Activo)
                    </div>
                    <div class="col-md-1"></div>
                    <div class="col-md-2">
                        @Html.LabelFor(model => model.MovContable.MovCerrado, new { @class = "control-label" })
                    </div>
                    <div class="col-md-3">
                        @Html.CheckBoxFor(model => model.MovContable.MovCerrado, new { @class = "form-control ", id = "MovCerrado" })
                        @Html.ValidationMessageFor(model => model.MovContable.MovCerrado)
                    </div>
                    <div class="col-md-1"></div>
                </div> <br />
            </div>
            <div class="panel panel-default">
                <div class="panel-heading">
                    <label class="control-label">Cuenta Afectada</label>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-2">
                        @Html.LabelFor(model => model.Cuenta.CiaCuenta_ID, new { @class = "control-label" })
                    </div>
                    <div class="col-md-3">
                        @Html.TextBoxFor(model => model.Cuenta.CiaCuenta_ID, new { @class = "form-control ", id = "CiaCuenta_ID", @readonly = true })
                        @Html.ValidationMessageFor(model => model.Cuenta.CiaCuenta_ID)
                    </div>
                    <div class="col-md-1"></div>
                </div> <br />
                <div class="row">
