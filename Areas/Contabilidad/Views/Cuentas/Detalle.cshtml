@model ADESCOMBUSINESS.Areas.Contabilidad.Models.CON_Cuentas
@{
    ViewBag.Title = "Detalle";
    Layout = null;
}
<div style="width: 100%;">
    <fieldset>@Html.HiddenFor(model => model.Cuenta_ID)</fieldset>
