                @Html.TextBoxFor(model => model.CTA_Titular, new { @class = "form-control ", @id = "CTA_Titular" })
                @Html.ValidationMessageFor(model => model.CTA_Titular)
            </div>
        </div> <br />
        <div class="row">
            <div class="col-md-2">
                @Html.LabelFor(model => model.CTA_Banco, new { @class = "control-label" })
            </div>
            <div class="col-md-4">
